@model List<MilkyProject.WebUI.DTOS.TestimonialDto.ResultTestimonialDto>
@{
    ViewData["Title"] = "TestList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html lang="en">

<body>

    <div class="content-wrapper">

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Add class <code>.table-striped</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kullanıcı</th>
                                        <th>Mesleği</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.testimonialId</td>
                                        <td class="py-1">
                                            <img src="@item.imageUrl" alt="image" /> @item.nameSurname</td>
                                        <td>@item.title</td>
                                        <td>@item.description</td>
                                            <td><a href="/Testimonial/DeleteTest/@item.testimonialId" class="btn btn-danger btn-rounded">Sil</a></td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                            <br />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
