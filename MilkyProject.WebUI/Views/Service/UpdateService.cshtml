@model MilkyProject.WebUI.DTOS.ServiceDto.UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html lang="en">

<body>

    <div class="content-wrapper">
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Güncelleme</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Servisler </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">Servis Güncelleme</p>
                        <form class="forms-sample" method="post" action="/Service/UpdateService">
                            <div class="form-group">
                                <label for="exampleInputName1">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputName1" asp-for="title" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputName1" asp-for="description" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">Resim Yolu</label>
                                <input type="text" class="form-control" id="exampleInputName1" asp-for="imageUrl" />
                            </div>
                            <button type="submit" class="btn btn-primary mr-2 btn-rounded"> Güncelle </button>
                            <a href="/Service/ServiceList" class="btn btn-light btn-rounded">İptal</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>
</html>