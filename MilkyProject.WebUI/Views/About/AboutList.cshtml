@model List<MilkyProject.WebUI.DTOS.AboutDto.ResultAboutDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<html lang="en">

<body>

    <div class="content-wrapper">

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Tablo Listesi <code>.Hakkımızda</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>1.Atl Metin</th>
                                        <th>2.Atl Metin</th>
                                        <th>Kuruluş</th>
                                     
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.aboutID</td>
                                     
                                        <td>@item.header</td>
                                        <td>@item.firstTitle</td>
                                        <td>@item.secondTitle</td>
                                        <td>@item.since</td>
                                        <td><a href="#" class="btn btn-secondary btn-rounded">İncele</a></td>
                                        <td><a href="/About/UpdateAbout/@item.aboutID" class="btn btn-info btn-rounded">güncelle</a></td>
                                        <td><a href="/About/DeleteAbout/@item.aboutID" class="btn btn-warning btn-rounded">Sil</a></td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                            <br />
                            <a href="/About/CreateAbout/" class="btn btn-dark btn-rounded">Yeni Hakkımızda Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>