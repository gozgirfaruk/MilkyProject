@model List<MilkyProject.WebUI.DTOS.GalleryDto.ResultGalleryDto>
@{
    ViewData["Title"] = "GalleryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html lang="en">

<body>

    <div class="content-wrapper">

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Tablo Listesi : <code>.Galeri</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kapak Fotografı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.galleryID</td>
                                        <td class="py-1">
                                            <img src=@item.imageUrl alt="image" style="height:150px; width:150px;" />
                                        </td>
                                        <td><a href="/Gallery/DeleteGallery/@item.galleryID" class="btn btn-dark btn-rounded" >Sil</a></td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                            <a href="/Gallery/CreateGallery/" class="btn btn-info btn-rounded">Yeni Fotograf Ekle</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>

