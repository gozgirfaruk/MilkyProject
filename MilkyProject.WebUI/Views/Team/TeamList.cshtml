@model List<MilkyProject.WebUI.DTOS.TeamDto.ResultTeamDto>
@{
    ViewData["Title"] = "TeamList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html lang="en">

<body>

    <div class="content-wrapper">

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Tablo Listesi :  <code>.Personeller</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı Soyadı</th>
                                        <th>Görevi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.teamID</td>
                                        <td class="py-1">
                                            <img src="@item.imageUrl" alt="image" />@item.name
                                        </td>
                                        <td>@item.title</td>
                                      <td><a href="/Team/UpdateTeam/@item.teamID" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                      <td><a href="/Team/DeleteTeam/@item.teamID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                            <br />
                            <a href="/Team/CreateTeam/" class="btn btn-outline-info btn-rounded">Yeni Personel Ekle</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>