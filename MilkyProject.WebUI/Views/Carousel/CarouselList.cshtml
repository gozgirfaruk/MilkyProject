@model List<MilkyProject.WebUI.DTOS.CarouselDto.ResultCarouselDto>
@{
    ViewData["Title"] = "CarouselList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kapak Fotografı</th>
                            <th>Başlık</th>
                            <th>Metin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.carouselId</td>
                                <td class="py-1">
                                    <img src="@item.imageUrl" alt="image" />
                                </td>
                                <td>@item.header</td>
                                <td>@item.title</td>
                                <td><a href="/Carousel/UpdateCarousel/@item.carouselId" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                                <td><a href="/Carousel/DeleteCarousel/@item.carouselId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Carousel/Insert/" class="btn btn-outline-secondary btn-rounded">Yeni Afiş Ekle</a>
            </div>
        </div>
    </div>
</div>