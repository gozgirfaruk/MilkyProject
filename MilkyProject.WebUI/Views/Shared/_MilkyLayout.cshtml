    <!-- Banner End -->
    <!-- Service Start -->
    @await Component.InvokeAsync("_ServicePartialComponent")

    <!-- Service End -->
    <!-- Gallery Start -->
    @await Component.InvokeAsync("_GalleryPartialComponent")

    <!-- Gallery End -->
    <!-- Product Start -->
    @await Component.InvokeAsync("_ProductPartialComponent")

    <!-- Product End -->
