@model List<MilkyProject.WebUI.DTOS.AddressDto.ResultAddressDto>
<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Ofisimiz</h5>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item.ourOffice</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item.phone</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item.mail</p>
                
            </div>
            }
            
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Hızlı Linkler</h5>
                <a class="/AboutUsWeb/Index/" href="">Hakkımızda</a>
                <a class="/ContactWeb/Index/" href="">İletişim</a>
                <a class="/ProductWeb/Index/" href="">Ürünler</a>
                <a class="/ServiceWeb/Index/" href="">Hizmetler</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Çalışma Saatlerimiz</h5>
                <p class="mb-1">Pazartesi - Cuma</p>
                <h6 class="text-light">09.00  - 15.00</h6>
                <p class="mb-1">Cumartesi</p>
                <h6 class="text-light">06.00  - 00.00</h6>
                <p class="mb-1">Pazar</p>
                <h6 class="text-light">Kapalı</h6>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Newsletter</h5>
                <p>Dolor amet sit justo amet elitr clita ipsum elitr est.</p>
                <div class="position-relative w-100">
                    <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                    <button type="button" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                </div>
            </div>
        </div>
    </div>
</div>
