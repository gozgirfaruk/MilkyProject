@model List<MilkyProject.WebUI.DTOS.CarouselDto.ResultCarouselDto>


<div class="container-fluid px-0 mb-5">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        @foreach(var item in Model)
            {
        <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="w-100" src="@item.imageUrl" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-8 text-start">
                                <p class="fs-4 text-white">@item.header</p>
                                <h1 class="display-1 text-white mb-5 animated slideInRight">@item.title</h1>
                                <a href="" class="btn btn-secondary rounded-pill py-3 px-5 animated slideInRight">Daha Fazlası...</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        }
  
    </div>
</div>
