@model MilkyProject.WebUI.DTOS.ContactDto.CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MilkyLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<body>
    
    
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">İletişim</h1>
            
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="section-title bg-white text-center text-primary px-3">İletişim</p>
                <h1 class="mb-5">Herhangi Bir Sorunuz Varsa Bizimle İletişime Geç</h1>
            </div>
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <h3 class="mb-4">İletişime Geçmek için Forma ihtiyaciniz mı Var?</h3>
                    <p class="mb-4">Aşağıda yer alan formu doldurarak en kısa sürede sizlerele iletişime geçmemizi sağlayabilirsiniz.  
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Ad Soyad" asp-for="name" required>
                                    <label for="name">Adınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="E-Posta Adresiniz" asp-for="mail" required>
                                    <label for="email">e-Mail</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" asp-for="subject" placeholder="Konu Başlığı" required>
                                    <label for="subject">Konu</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" asp-for="description" placeholder="Mesajınızı bu alana giriniz" id="message" style="height: 250px" required></textarea>
                                    <label for="message">Mesaj</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-secondary rounded-pill py-3 px-5" type="submit">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <h3 class="mb-4">Contact Details</h3>
                    @await Component.InvokeAsync("_ContactPageDetailPartialComponent")
                    
                    <iframe class="w-100 rounded"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3183.6293420902443!2d37.38063581197152!3d37.066315152536674!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1531e14d31d0ff3f%3A0x1757cbe443ea2919!2sGaziantep%20Kalesi!5e0!3m2!1str!2str!4v1715081188305!5m2!1str!2str"
                            frameborder="0" style="min-height: 300px; border:0;" allowfullscreen="" aria-hidden="false"
                            tabindex="0"></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Footer Start -->

</body>

</html>

