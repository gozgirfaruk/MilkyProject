@model List<MilkyProject.WebUI.DTOS.ResultCateogoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <br />
    <div class="card">
        <br />
        <div class="card-body">
          <br /><br />
            <p class="card-description">
                Tablo :  <code>Kategori Listesi</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.categoryID</td>
                            <td class="py-1">
                                <img src="@item.ImageUrl" alt="image" /> @item.name</td>
                            <td><a href="/Category/UpdateCategory/@item.categoryID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                            <td><a href="/Category/DeleteCategory/@item.categoryID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
                <br />
                <a href="/Category/CreateCategory/" class="btn btn-outline-dark btn-rounded">Yeni Kategori</a>
            </div>
        </div>
    </div>
</div>

